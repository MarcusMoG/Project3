              <div class="card-body">
                <!-- Table with stripped rows -->
                <div class="table-responsive">
                  <table class="table datatable custom-table">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Instructions</th>
                        <th>Ingredients</th>
                      </tr>
                    </thead>
                    <!-- ejs inserts -->
                    <tbody>
                      <% data.forEach(item => { %>
                      <tr>
                        <td><%= item.Title %></td>
                        <td>
                          <%- item.Instructions.replace(/\n/g, `
                          <br />
                          `) %>
                        </td>
                        <td><%= item.Ingredients %></td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                  <!-- End Table with stripped rows -->
                </div>
              </div>
            </div>
