      <!-- ======= Menu Section ======= -->
      <section
        style="display: flex; justify-content: center; align-items: center"
      >
        <div class="row">
          <div class="col-lg-12">
            <div class="card" style="border: none">
              <div class="card-body">
                <!-- Table with stripped rows -->
                <div>
                  <table style="width: 70%; margin-bottom: 0">
                    <thead>
                      <tr>
                        <th
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                            width: 30%;
                          "
                        >
                          Title
                        </th>
                        <th
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                            width: 40%;
                          "
                        >
                          Instructions
                        </th>
                        <th
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                            width: 30%;
                          "
                        >
                          Ingredients
                        </th>
                      </tr>
                    </thead>
                    <!-- ejs inserts -->
                    <tbody>
                      <% data.forEach(item => { %>
                      <tr>
                        <td
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                          "
                        >
                          <%= item.Title %>
                        </td>
                        <td
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                          "
                        >
                          <%- item.Instructions.replace(/\n/g, `
                          <br />
                          `) %>
                        </td>
                        <td
                          style="
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                          "
                        >
                          <%- item.Ingredients.replace(/\n/g, `
                          <br />
                          `) %>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                  <!-- End Table with stripped rows -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="section">
        <div class="row">
          <div class="col-lg-12">
